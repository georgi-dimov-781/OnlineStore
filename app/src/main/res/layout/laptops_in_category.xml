<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF99"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".LaptopsInCategory">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonAllGenres"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/admin_design"
                android:text="Category: Laptops"
                android:textColor="@android:color/black"
                android:textFontWeight="bold"
                android:textSize="18sp" />

            <TableLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:isScrollContainer="true"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:stretchColumns="0,1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageVB1"
                        android:layout_width="134dp"
                        android:layout_height="160dp"
                        android:contentDescription="@string/Order"
                        tools:srcCompat="@drawable/laptop1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/type"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:width="170dp"
                            android:text="@string/exclusive"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dell"
                            android:textColor="#1C1C1C" />

                        <Button
                            android:id="@+id/buttonRead0"
                            android:layout_width="112dp"
                            android:layout_height="40dp"
                            android:layout_gravity="right"
                            android:layout_margin="9dp"
                            android:background="@drawable/admin_design"
                            android:text="Description"
                            android:textColor="@android:color/black"
                            android:textFontWeight="bold" />

                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageVB2"
                        android:layout_width="100dp"
                        android:layout_height="160dp"
                        tools:srcCompat="@drawable/laptop2" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20sp"
                            android:orientation="horizontal">

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/types"
                            android:textColor="#090909" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/promotion"
                            android:textColor="#070707"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/laptopl"
                            android:textColor="#000000" />

                        <Button
                            android:id="@+id/buttonReadB"
                            android:layout_width="112dp"
                            android:layout_height="40dp"
                            android:layout_gravity="right"
                            android:layout_margin="9dp"
                            android:background="@drawable/admin_design"
                            android:text="Description"
                            android:textColor="@android:color/black"
                            android:textFontWeight="bold" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageVB3"
                        android:layout_width="100dp"
                        android:layout_height="160dp"
                        android:contentDescription="@string/Order"
                        tools:srcCompat="@drawable/laptop5" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20sp"
                            android:orientation="horizontal">

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/typess"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/limited"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/laptops"
                            android:textColor="#000000" />

                        <Button
                            android:id="@+id/buttonRead1"
                            android:layout_width="112dp"
                            android:layout_height="40dp"
                            android:layout_gravity="right"
                            android:layout_margin="9dp"
                            android:background="@drawable/admin_design"
                            android:text="Description"
                            android:textColor="@android:color/black"
                            android:textFontWeight="bold" />
                    </LinearLayout>
                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/buttonAllGenres2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/admin_design"
                android:text="Back to Categories List"
                android:textColor="@android:color/black"
                android:textFontWeight="bold"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>